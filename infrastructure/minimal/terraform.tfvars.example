# Terraform Variables Configuration Example
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region = "us-east-1"

# Environment Configuration
environment  = "dev"        # Options: dev, staging, prod
project_name = "customer-support"

# Admin Configuration
admin_email = "admin@yourcompany.com"  # Replace with your admin email

# Optional: VPC Configuration (adds ~$45/month for NAT Gateway)
enable_vpc = false

# Optional: Lambda Configuration
lambda_runtime     = "python3.12"
lambda_timeout     = 30
lambda_memory_size = 256

# Optional: S3 Vector Configuration
vector_dimensions         = 1536
vector_similarity_algorithm = "cosine"
supported_languages      = ["en", "es", "fr", "de", "ja"]

# Optional: DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST"  # Options: PAY_PER_REQUEST, PROVISIONED

# Optional: CloudWatch Configuration
log_retention_days = 7  # Options: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365, 400, 545, 731, 1827, 3653